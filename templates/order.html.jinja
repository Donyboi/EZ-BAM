<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>My Orders | EZ-BAM</title>
</head>

<body class="bg-gradient-to-b from-gray-700 to-gray-500 min-h-screen text-gray-200">

  {% include 'components/navbar.html.jinja' %}

  <main class="max-w-6xl mx-auto px-6 py-10">

    <h1 class="text-3xl font-bold mb-8">My Orders</h1>

    {% if orders and orders|length > 0 %}

      <div class="space-y-6">

        {% for order in orders %}
        <div class="bg-gray-800 rounded-xl shadow-lg p-6">

          <!-- Order Header -->
          <div class="flex justify-between items-center border-b border-gray-600 pb-4 mb-4">
            <div>
              <p class="font-semibold">Order #{{ order.id }}</p>
              <p class="text-sm text-gray-400">
                Placed on {{ order.date }}
              </p>
            </div>

            <div class="text-right">
              <p class="font-bold text-blue-400">${{ order.total }}</p>
              <p class="text-sm text-gray-400">{{ order.status }}</p>
            </div>
          </div>

          <!-- Items -->
          <div class="space-y-3">
            {% for item in order.items %}
            <div class="flex items-center gap-4">
              <img src="{{ item.image }}"
                   class="w-16 h-16 object-cover rounded-lg border border-gray-600">

              <div class="flex-1">
                <p class="font-semibold">{{ item.name }}</p>
                <p class="text-sm text-gray-400">
                  Qty: {{ item.quantity }} Ã— ${{ item.price }}
                </p>
              </div>

              <div class="font-semibold text-gray-300">
                ${{ item.quantity * item.price }}
              </div>
            </div>
            {% endfor %}
          </div>

        </div>
        {% endfor %}

      </div>

    {% else %}

      
      <div class="flex flex-col items-center justify-center mt-24 text-center">
        <h2 class="text-3xl font-bold mb-4">No orders yet</h2>
        <p class="text-gray-400 mb-6">
          When you place an order, it will show up here.
        </p>

        <img src="/static/empty_cart.gif" class="w-64 mb-6" alt="No Orders">

        <a href="/browse"
           class="bg-blue-800 px-6 py-3 rounded-lg text-white hover:bg-blue-700 transition">
          Start Shopping
        </a>
      </div>

    {% endif %}

  </main>

</body>
</html>
