<!doctype html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>EZ-BAM</title>
</head>

<body class="bg-gradient-to-b from-gray-700 to-gray-500 px-6 py-6 text-gray-200 min-h-screen font-sans">

    {% include 'components/navbar.html.jinja' %}

    <div class="max-w-10xl mx-auto mt-10 grid grid-cols-1 md:grid-cols-3 gap-10">

        

        <div class="flex flex-col items-center">
            <img src="{{ product['Image'] }}"
             class="w-96 rounded-xl shadow-xl" />
        </div>

        <div class="bg-gray-800 p-6 rounded-xl shadow-xl border border-gray-700">
            <p class="text-gray-300 mb-6 leading-relaxed">
                {{ product['Description'] }}
            </p>
        </div>

        <div class="bg-gray-800 p-6 rounded-xl shadow-xl border border-gray-700">

            <h1 class="text-3xl font-bold mb-4 text-white">
                {{ product['Name'] }}
            </h1>
            
            <p class="text-3xl from-blue-700 to-gray-500 text-gray-200 font-sans">
                ${{ product['Price'] }}
            </p>

            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            
            

            
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg w-full text-lg">
                Add to Cart
            </button>

        </div>
    </div>

</body>
</html>
