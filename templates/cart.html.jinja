<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>EZ-BAM</title>
  </head>

  <body class="bg-gradient-to-b from-gray-700 to-gray-500 shadow-md px-6 py-3 text-gray-400 min-h-screen font-sans">
    
    {% include 'components/navbar.html.jinja' %}

    

<h1 class="text-3xl font-bold mb-6">Your Cart</h1>


<div class="grid grid-cols-6 font-bold text-gray-700 mb-3 px-2">
    <div>Item</div>
    <div>Name</div>
    <div class="text-center">Qty</div>
    <div class="text-center">Price</div>
    <div class="text-center">Total</div>
    <div class="text-center">Action</div>
</div>

<div class="space-y-2">
    {% for x in cart %}
    <div class="grid grid-cols-6 items-center bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition">

        
        <img 
            src="{{ x['Image'] }}" 
            class="w-20 h-20 object-cover rounded-md border"
        >

        
        <div class="text-lg font-semibold ml-4">
            {{ x['Name'] }}
        </div>

        
        <div class="cart-row">
                <img src="{{x['Image']}}"
                class ="w-20 h-20 object-cover rounded-md border">
                <div class="text-lg font semibold ml-4">{{x['Name']}}</div>


   
                <div class="flex items-center justify-center space-x-2">
                    <form method="post" action="/cart/{{ x['ProductID'] }}/update_qty">
                    <input class="w-full" name="qty" type="number"  value="{{ x['Quantity']}}">
                    <button type="submit">update</button>
                    </form>
                </div>


        </div>


        
        <div class="text-center font-medium text-gray-800">
            ${{ x['Price'] }}
        </div>

        
        <div class="text-center font-bold text-green-600">
            ${{ x['Price'] * x['Quantity'] }}
        </div>

        
        <div class="flex justify-center">
            
                <button class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                    Remove
                </button>
            </form>
        </div>

    </div>
    {% endfor %}
</div>


<div class="mt-10 bg-white shadow-lg rounded-lg p-6 w-full md:w-1/3 ml-auto">
    <h2 class="text-2xl font-bold mb-4">Order Summary</h2>

    <div class="flex justify-between text-lg mb-2">
        <span>Subtotal</span>
        <span>${{ subtotal }}</span>
    </div>


    <div class="flex justify-between text-xl font-bold border-t pt-4">
        <span>Total</span>
        <span>${{ total }}</span>
    </div>

    <button class="mt-6 w-full bg-blue-600 text-white py-3 rounded-lg text-lg hover:bg-blue-700">
        Checkout
    </button>
</div>
    
    </main>
  </body>
</html>