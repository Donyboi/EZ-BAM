        <div class="mt-10 bg-gray-700 shadow-lg rounded-lg p-6 w-full md:w-1/3 ml-auto text-gray-200">

            <h2 class="text-2xl font-bold mb-4">Order Summary</h2>



            <div class="flex justify-between text-xl font-bold border-t pt-4">
                <h2>Total: {{total}}</h2>
            
            <a href="/checkout" class="text-white mx-2 hover:underline bg-gradient-to-b from-gray-700 to-gray-900 shadow-md px-6 py-3 rounded-xl text-white font-semibold">checkout</a>
               
                
        </div>
            

            
        </div>
    {% endif %}
    
    </main>
  </body>
</html>